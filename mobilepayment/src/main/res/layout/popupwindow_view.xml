<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorSgray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="选择支付方式"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/chose"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textColor_selected"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/wechat_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/chose_type_selecotr"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/pay_icon_weixin_press"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="微信支付"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"></View>

        <LinearLayout
            android:id="@+id/ali_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/chose_type_selecotr"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/pay6"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="支付宝支付"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"></View>

        <LinearLayout
            android:id="@+id/ten_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/chose_type_selecotr"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/pay_qq_selected"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="QQ支付"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>